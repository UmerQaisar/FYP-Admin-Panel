<div class="container" style="margin-top: 150px">
  <div class="row">
    <div class="col-lg-6">
      <%= form_with url: get_reports_path, method: :get, local:true do |f| %>
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label">Patient Id</label>
          <%= f.text_field :id, autofocus: true, autocomplete: "Patient Id", class: 'form-control' %>
        </div>

        <div class="actions mb-3">
          <%= f.submit "Get Reports", class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>