<div class="container p-5">
  <div class="row">
    <div class="col-lg-4">
      <h5>Patient's Details</h5>
      <div class="card mt-4">
        <div class="card-header">
          <%= @user[:userName] %>
        </div>
        <ul class="list-group list-group-flush">
          <li class="list-group-item">Email: <%= @user[:email] %></li>
          <li class="list-group-item">Address: <%= @user[:address] %></li>
          <li class="list-group-item">Contact: <%= @user[:contact] %></li>
          <li class="list-group-item">ID: <%= @user.document_id %></li>
        </ul>
      </div>
      <%#= link_to '<i class="bi bi-trash3-fill"></i> Delete'.html_safe, { controller: users_path, action: :destroy, id: @user.document_id }, method: :delete, class: 'btn btn-danger my-5' %>
      <%#= link_to '<i class="bi bi-pencil"></i> Edit'.html_safe, { controller: users_path, action: :destroy, id: @user.document_id }, method: :delete, class: 'btn btn-success my-5 ms-2' %>
    </div>

    <div class="col-lg-8">
      <h5 class=" mb-4">Patient's Reports</h5>
      <div class="border rounded p-2">
        <% @reports.each do |report| %>
          <% @count += 1 %>
          <div class="border border-dark rounded my-3">
            <img src="<%= report[:downloadUrl] %>" class="img-fluid rounded" alt="Report" width="100%">
            <br>
            <h6 class="px-3 pt-3">Ocr Data</h6>
            <p class="px-3 pb-3"><%= report[:ocrData] %>
          </div>
        <% end %>
        <%= @count == 0 ? 'No Report For This User' : '' %>
      </div>
    </div>
  </div>

</div>