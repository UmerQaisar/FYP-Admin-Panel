<div class="container" style="margin-top: 50px; padding: 20px;">
  <div class="row bg-light " style="padding: 20px; border-width: 3px; border-color: black; border-style: solid">
    <div class="col-sm-6 col-md-8">
      <h4><%= current_doctor.name %></h4>
      <br/>
      <small><cite title="San Francisco, USA"><%= current_doctor.contact %> <i class="glyphicon glyphicon-map-marker">
      </i></cite></small>
      <p>
        <br/>
        <i class="glyphicon glyphicon-envelope"></i><%= current_doctor.email %>
        <br/>
        <br/>
        <i class="glyphicon glyphicon-gift"></i><%= current_doctor.created_at %></p>

      <%= link_to 'Edit Profile', edit_doctor_registration_path(current_doctor), class:'btn btn-primary' %>
    </div>
    <div class="col-md-4 col-sm-6">
      <image src="https://cdn-icons-png.flaticon.com/512/504/504018.png" width="240px"></image>
    </div>
  </div>
</div>

