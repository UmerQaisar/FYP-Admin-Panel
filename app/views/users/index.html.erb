<div class="container my-4" >
  <table class="table table-striped table-bordered rounded-5 align-middle">
    <thead class="text-center">
    <tr>
      <th scope="col" class="fw-bold h4 py-4">Email</th>
      <th scope="col" class="fw-bold h4 py-4">User Name</th>
      <th scope="col" class="fw-bold h4 py-4">Address</th>
      <th scope="col" class="fw-bold h4 py-4">Contact</th>
      <th scope="col" class="fw-bold h4 py-4">Document ID</th>
      <th scope="col" class="fw-bold h4 py-4">Action</th>
    </tr>
    </thead>

    <tbody class="text-center">
    <% @users.each do |user| %>
      <tr>
        <td class="h6"><%= user[:Email] %></td>
        <td class="h6"><%= user[:UserName] %></td>
        <td class="h6"><%= user[:Address] %></td>
        <td class="h6"><%= user[:Contact] %></td>
        <td class="h6"><%= user.document_id %></td>
        <td>
          <%#= link_to 'Delete', { controller: users_path, action: :destroy, id: user.document_id }, method: :delete, class: 'btn btn-danger me-3' %>
          <%= link_to 'Details', user_path(user.document_id), class: 'btn btn-success m-3' %>
        </td>
      </tr>
    <% end %>

    </tbody>
  </table>
</div>
