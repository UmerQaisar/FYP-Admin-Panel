<div class="container my-4" >

  <div class="container table-responsive py-5">
    <table class="table table-striped table-bordered table-hover no-footer icon-fixed-width">
      <thead>
        <tr class="table-dark">
          <th>Email</th>
          <th>User Name</th>
          <th>Address</th>
          <th>Contact</th>
          <th>Document ID</th>
          <th>Action</th>
        </tr>
      </thead>

      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user[:email] %></td>
          <td><%= user[:userName] %></td>
          <td><%= user[:address] %></td>
          <td><%= user[:contact] %></td>
          <td><%= user.document_id %></td>
          <td class="text-center">
            <%= link_to 'Delete', { controller: users_path, action: :destroy, id: user.document_id }, method: :delete, data: {confirm:'Are you sure?'}, class: 'btn btn-danger me-3' %>
            <%= link_to 'View', "/reports/#{user.document_id}", class: 'btn btn-success me-3' %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>
